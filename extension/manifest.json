{
  "manifest_version": 3,
  "name": "YouTube Video Downloader",
  "version": "1.0.1",
  "description": "Download single YouTube video using yt-dlp",
  "author": "Vinhnt",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://emma.ntvcloud.com/*",
    "http://localhost:1101/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
